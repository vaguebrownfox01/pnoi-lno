<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CatalogActivity">


<!--    profile list view    -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_profile_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


<!--  FAB to go to editor activity  -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton_catalog_add_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/person_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

<!--    Empty list view    -->
    <TextView
        android:id="@+id/empty_list_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.40"
        android:drawableTop="@drawable/round_lungs"
        android:fontFamily="sans-serif-light"
        android:paddingVertical="16dp"
        android:text="@string/pnoi_phone"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textColor="@color/colorAccent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/main_profile_list"
        app:layout_constraintStart_toStartOf="@+id/main_profile_list"
        app:layout_constraintTop_toTopOf="@+id/main_profile_list" />


</androidx.constraintlayout.widget.ConstraintLayout>